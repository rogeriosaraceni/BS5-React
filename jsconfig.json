{
    "compilerOptions": {
        // Define o diretório base para os caminhos relativos
        "baseUrl": ".",

        // Define aliases para melhorar importações (opcional)
        "paths": {
            "@/*": ["./src/*"],
            "@pages/*": ["./src/pages/*"],
            "@partials/*": ["./src/partials/*"],
            "@components/*": ["./src/components/*"],
            "@utils/*": ["./src/components/*"]
        }
    },

    // Inclui todos os arquivos da pasta src
    "include": ["src/**/*"]
}
